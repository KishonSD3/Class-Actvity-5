
#include <stdio.h>
int main (void)

{
    int integer1;
    int integer2;
    int 1;
    int 2;
    
    printf("Enter a number");
    scanf("%d", &integer1);
    
    printf("Enter the second number");
    scanf("%d", &integer2);
    
    printf("Enter 1 to add or 2 to multiply");
    scanf("%d", int 1, int 2);
    
    sum = &integer1 + &integer2;
    product = &integer1 * &integer2;
    
    
    if (int 1)
    {
        
        printf("the sum of %d and %d is %d", sum);
        
        
    }
    
    else if (int 2)
    {
        
        printf("the product of %d and %d is %d", product);
        
    }
    
    
    return 0;
    
}
